<link rel="stylesheet" href="/css/signinForm.css">
<h1 id="tital" class="title is-1">Sign In</h1>
<form action="/users/create-session" method="POST">
    <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input type="email" name="email" required placeholder="your email" class="form-control" id="email">
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" id="password" name="password" required placeholder="password" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form> 