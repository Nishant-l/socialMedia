<link rel="stylesheet" href="/css/signUp.css">
<h1 id="tital">Sign Up</h1>
<form action="/users/create" method="POST">
    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input class="form-control" type="text" name="name" required placeholder="your name" id="Name">
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input class="form-control" type="email" name="email" required placeholder="your email" id="email">
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input class="form-control" type="password" name="password" required placeholder="password" id="password">
    </div>
    <div class="mb-3">
        <label for="conferm_password" class="form-label">Conferm Password</label>
        <input class="form-control" type="password" name="conferm_password" required placeholder="conferm password" id="conferm_password">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form> 